# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
insert_final_newline = true

[*.html]
indent_style = space

[*.pug]
indent_style = space

[*.{js, jsx, ts, tsx, css, scss}]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.inc]
indent_style = tab

[*.php]
indent_style = tab
